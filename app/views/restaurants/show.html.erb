<div class=m-3>
  <div class="card-trip">
  <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
  <div class="card-trip-infos">
    <div>
      <h2><%= @restaurant.name %></h2>
      <p><%= @restaurant.address %> </p>
    </div>
    <h2 class="card-trip-pricing"><%= @restaurant.phone_number %></h2>
  </div>
</div>
    <% @restaurant.reviews.each do |review| %>
      <div class="card-product">
      <img src="https://plus.unsplash.com/premium_photo-1661667075996-18a04b626fe2?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
        <div class="card-product-infos">
          <h2><%= review.rating%></h2>
          <p><strong><%= review.content %></strong></p>
        </div>
        </div>
      <% end %>
  <%= link_to "Back", restaurants_path, class: "btn btn-success" %>
  <%= link_to "Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>
